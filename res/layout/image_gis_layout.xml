<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gesture-image="http://schemas.polites.com/android"
     android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.teraim.vortex.gis.GisImageView
        android:id="@+id/GisV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        gesture-image:max-scale="20.0"
        gesture-image:min-scale="0.5" />

   <ImageButton
       android:id="@+id/menuB"
       android:layout_width="66dp"
       android:layout_height="66dp"
       android:layout_gravity="top|right"
       android:layout_marginRight="40dp"
       android:layout_marginTop="60dp"
       android:background="#0000"
       android:scaleType="fitCenter"
       android:src="@drawable/gis_menu_button" />
   

   
    <LinearLayout
        android:id="@+id/menuL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:minHeight="300dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LayersL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/filterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layers"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
             android:id="@+id/FiltersL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/avstriktF"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_gravity="right"
        android:background="@color/transparent_blue" >

        <TextView
            android:id="@+id/avstriktT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Dist: 122 Rikt: 234"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </FrameLayout>
    
</FrameLayout>
