<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_blue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/background_light"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/headerT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <TextView
                android:id="@+id/subHeaderT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
            
        </LinearLayout>
		<View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />
        
        <LinearLayout
            android:id="@+id/popBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/filterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ¤tt nya delningspunkter:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tagE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789,"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#000000" />

		 <LinearLayout
		     android:id="@+id/buttonsW"
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:background="@color/white"
		     android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/buttonsL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:orientation="horizontal" >

            <Button
                android:id="@+id/hundraB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100" />

            <Button
                android:id="@+id/rensaB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rensa" />

            </LinearLayout>
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/avbrytB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avbryt" />

            <Button
                android:id="@+id/sparaB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spara" />
        </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>