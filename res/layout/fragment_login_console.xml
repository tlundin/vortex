<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/bgImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/frontpic" />

    <TextView
        android:id="@+id/logger"
        style="@style/ConsoleStyle"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="110dp"
        android:background="#44000000"
        android:maxLines="18"
        android:paddingLeft="16dip"
        android:scrollbars="vertical"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/vortexlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logger"
        android:layout_alignLeft="@+id/teraimlogo"
        android:src="@drawable/vortex_small" />

    <TextView
        android:id="@+id/appTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logger"
        android:layout_alignParentLeft="true"
        android:background="#44000000"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

        <TextView
        android:id="@+id/versionTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logger"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="10dp"
        android:background="#44000000"
        android:textColor="@color/green"
        android:textSize="22sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/teraimlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vortexlogo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/teraim_small_w" />
    <TextView
        android:id="@+id/licenseTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logger"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
         />

</RelativeLayout>