<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
xmlns:android="http://schemas.android.com/apk/res/android" >
<PreferenceCategory android:title="General">
    android:title="General" 
 <ListPreference 
     android:key="device_type"
     android:entryValues="@array/deviceTypes" 
     android:title="Device type" 
     android:defaultValue="Master"
     android:entries="@array/deviceTypes" />

<EditTextPreference
            android:key="lag_id"
            android:title="Team" 
            android:summary="Name of team"
            android:dialogTitle="Team"
            android:inputType="textCapSentences"  
            android:dialogMessage="Name of team"    
    />
<EditTextPreference 
    android:dialogTitle="User name" 
    android:title="User name" 
    android:dialogMessage="Write your name here!" 
    android:negativeButtonText="Cancel" 
    android:positiveButtonText="Ok" 
    android:inputType="textCapSentences"  
    android:key="user_id" 
    /> 
 </PreferenceCategory>

<PreferenceCategory android:title="Developer Options" >    

<EditTextPreference
            android:key="server_location"
            android:title="Server URL" 
            android:summary="The client will download workflows and other configuration from this server"
            android:dialogTitle="URL"
            android:dialogMessage="Application server URL"    
            android:defaultValue="http://www.teraim.com/" />
    
<EditTextPreference
            android:key="bundle_name"
            android:title="Name of Application Bundle (change forces restart)" 
            android:dialogTitle="Application"
            android:dialogMessage="Enter the application name. No '.xml', only the name!\n NOTE: CHANGING THIS VALUE WILL RESTART THE PROGRAM!!"  
            android:inputType="textCapSentences"  
            android:defaultValue="Vortex.xml" />
<CheckBoxPreference
    		android:key="dev_switch"
    		android:title="Developer functions"
    		android:summary="Advanced logging etc"
    		android:dialogTitle="Utvecklarfunktion"
    		android:dialogMessage="Slå på eller av utvecklarfunktionen"
    		android:defaultValue="false" />
<CheckBoxPreference
    		android:key="no_version_control"
    		android:title="Version Control"
    		android:summary="Always load the configuration files"
    		android:dialogTitle=""
    		android:dialogMessage=""
    		android:defaultValue="false" />
<CheckBoxPreference
    		android:key="sync_feature"
    		android:title="Sync"
    		android:summary="Turn on or off the sync feature"
    		android:dialogTitle=""
    		android:dialogMessage=""
    		android:defaultValue="true" />
<CheckBoxPreference
    		android:key="show_context"
    		android:title="Context"
    		android:summary="Show Context"
    		android:dialogTitle=""
    		android:dialogMessage=""
    		android:defaultValue="true" />

<EditTextPreference
            android:key="backup_location"
            android:title="Backup folder" 
            android:summary="The client will save export files to this folder on the SD card"
            android:dialogTitle="Backup folder"
            android:dialogMessage="Backup folder path. Do not change this if you are not absolutely sure you know what you are doing."    
            android:defaultValue="" />

<Preference android:title="Reset sync"
                android:key="@string/resetSyncButton"
                android:summary="Use when you need to realign to another sync partner."/>
</PreferenceCategory>



</PreferenceScreen>